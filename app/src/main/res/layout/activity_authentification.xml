<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Controller.Activities.AuthentificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="40dp"
        android:paddingEnd="40dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_facebook"
            android:background="@drawable/auth_facebook_btn"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:id="@+id/activity_auth_btn_facebook"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_google"
            android:background="@drawable/auth_google_btn"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:id="@+id/activity_auth_btn_google"/>

    </LinearLayout>

</LinearLayout>